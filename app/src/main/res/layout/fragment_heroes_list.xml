<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.HeroesListFragment">

    <TextView
        android:id="@+id/tvTitleChooseHero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your hero"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rwHeroesList"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rwHeroesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleChooseHero" />

</androidx.constraintlayout.widget.ConstraintLayout>